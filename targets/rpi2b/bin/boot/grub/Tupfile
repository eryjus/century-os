include_rules


##
## -- Create the grub.cfg file
##    ------------------------
:   |>  echo   "multiboot /boot/kernel.elf"                          > %o;      \
        echo   "boot"                                               >> %o;      \
    |> grub.cfg


##
## -- create the cfg-file for pi-bootloader
##    -------------------------------------
:   |>  echo   "kernel sysroot/rpi2b/boot/kernel.elf"                > %o;      \
#        echo   "module sysroot/rpi2b/boot/pmm.elf"                  >> %o;      \
    |> cfg-file

